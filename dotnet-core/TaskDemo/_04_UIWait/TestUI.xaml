<Window x:Class="_04_UIWait.TestUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04_UIWait"
        mc:Ignorable="d"
        Title="TestUI" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DockPanel>
                <Button x:Name="button" Content="Go" Height="22" Width="100"/>
                <Button x:Name="buttonNet" Content="Request" Height="22" Width="100"/>
            </DockPanel>
            <TextBlock x:Name="results" Margin="5" TextWrapping="Wrap"  />
        </StackPanel>

    </Grid>
</Window>
