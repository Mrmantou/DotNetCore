@using Albert.Demo.Domain.Friends
@using Albert.Demo.Web.Utils
@model Albert.Demo.Domain.Friends.Friend


@{
    ViewData["Title"] = "Add your footprint";
}

<h2>Create</h2>

<h4>Add Your Footprint!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NickName" class="control-label"></label>
                <input asp-for="NickName" class="form-control" placeholder="Your nick name, not your real name..."/>
                <span asp-validation-for="NickName" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="RelationType" class="control-label"></label>
                <select asp-items="@Html.GetEnumSelectList(typeof(RelationType))" asp-for="RelationType" class="form-control"></select>
                <span asp-validation-for="RelationType" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                @Html.Label("RelationType")
                @Html.DropDownList("RelationType", @EnumHelper.GetSelectList<RelationType>(), new { @class= "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" placeholder="What do you want say to me?"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

